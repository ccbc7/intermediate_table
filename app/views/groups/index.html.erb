
<h2>グループ作成</h2>
<%= form_with model: @group, local: true do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.submit "Register" %>
  </div>
<% end %>

<h2>Existing Groups</h2>
<ul>
  <% @groups.each do |group| %>
    <li>
      <%= link_to group.name, group_path(group) %>
      <%= link_to "Delete", group_path(group), method: :delete, data: { confirm: "Are you sure?" } %>
    </li>
  <% end %>
</ul>
