<%= link_to "登録済みグループユーザー一覧", group_users_path%>
<h1>Users</h1>
<h2>ユーザー作成</h2>
<%= form_with model: @user, local: true do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.submit "Register" %>
  </div>
<% end %>

<h2>Existing Users</h2>
<ul>
  <% @users.each do |user| %>
    <li>
      <%= user.name %>
      <%= link_to "Delete", user_path(user), method: :delete, data: { confirm: "Are you sure?" } %>
    </li>
  <% end %>
</ul>
